<Window x:Class="Hypnos_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hypnos" Height="400" Width="891">
    <Grid>
        <GroupBox Header="Log" Margin="10,24,12,29">
            <Grid>
                <TextBox Name="tRecv" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" FontFamily="Lucida Console" />
            </Grid>
        </GroupBox>
        <Menu Height="23" Margin="0,0,0,0" VerticalAlignment="Top">
            <MenuItem Name="mi_listen" Header="Listen" Click="mi_listen_Click" />
            <MenuItem Name="mi_save" Header="Save Log" Click="mi_save_Click" />
            <MenuItem Header="Clear" Name="mi_clear" Click="mi_clear_Click" />
            <MenuItem Header="Recording" Name="mi_recording" IsChecked="True" Click="mi_recording_Click" />
        </Menu>
        <StatusBar Height="23" Margin="0,0,0,0" VerticalAlignment="Bottom">
            <StatusBarItem Name="sbInfo" />
        </StatusBar>
    </Grid>
</Window>
